<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="98dp"
    android:id="@+id/home_results_item"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground">

    <FrameLayout
        android:id="@+id/home_results_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/home_results_logo_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_sample_image_24dp"/>

    </FrameLayout>

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="@dimen/padding_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/home_results_frame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/home_results_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            tools:text="Event Name"
            android:textSize="@dimen/typography_body"
            android:textColor="#000000"
            android:layout_marginRight="@dimen/padding_half"
            android:layout_marginEnd="@dimen/padding_half"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/home_results_round_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Event Round"
            android:textSize="12sp"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</RelativeLayout>
